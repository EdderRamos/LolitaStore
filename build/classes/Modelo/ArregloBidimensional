package Modelo;

public class ArregloBidimensional {
    private int filas, columnas;
    private int[][] datos;

    public ArregloBidimensional(int filas, int columnas) {
        this.filas = filas;
        this.columnas = columnas;
        datos = new int[filas][columnas];
    }

    public void agregar(int fila, int columna, int valor) {
        datos[fila][columna] = valor;
    }

    public int[][] getDatos() {
        return datos;
    }

    public int contarCeros() {
        int ceros = 0;
        for (int i = 0; i < filas; i++)
            for (int j = 0; j < columnas; j++)
                if (datos[i][j] == 0) ceros++;
        return ceros;
    }

    public boolean esPocoDensa() {
        int total = filas * columnas;
        int ceros = contarCeros();
        return (ceros * 100.0 / total) >= 60;
    }
}
